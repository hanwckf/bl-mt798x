	default 0 if _NMBM_LOG_LEVEL_DEBUG
	default 1 if _NMBM_LOG_LEVEL_INFO
	default 2 if _NMBM_LOG_LEVEL_WARN
	default 3 if _NMBM_LOG_LEVEL_ERR
	default 4 if _NMBM_LOG_LEVEL_EMERG
	default 5 if _NMBM_LOG_LEVEL_NONE

endif # _NMBM_CONFIGS

